{
  "name": "worshipnote",
  "version": "1.0.0",
  "description": "찬양 악보 관리 앱",
  "main": "public/electron.js",
  "author": "WorshipNote",
  "license": "MIT",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron . --disable-dev-shm-usage",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\" --kill-others-on-fail --prefix-colors blue,green",
    "dev": "npm run electron-dev",
    "electron-only": "npx electron . --disable-gpu --no-sandbox --disable-web-security --disable-features=VizDisplayCompositor",
    "electron-safe": "npx electron . --disable-gpu --no-sandbox --disable-web-security --disable-features=VizDisplayCompositor --disable-dev-shm-usage --disable-extensions --disable-background-timer-throttling --disable-backgrounding-occluded-windows --disable-renderer-backgrounding",
    "electron-pack": "electron-builder",
    "preelectron-pack": "npm run build"
  },
  "build": {
    "appId": "com.worshipnote.app",
    "productName": "WorshipNote",
    "icon": "public/icon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/icon.png"
    ],
    "asarUnpack": [
      "public/fonts/**/*"
    ],
    "extraResources": [
      {
        "from": "public/fonts",
        "to": "fonts"
      },
      {
        "from": "public/data.json",
        "to": "data.json"
      }
    ],
    "mac": {
      "category": "public.app-category.music"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "WorshipNote-Setup.exe",
      "publisherName": "WorshipNote"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WorshipNote",
      "allowElevation": true,
      "runAfterFinish": false,
      "deleteAppDataOnUninstall": false,
      "include": "installer.nsh"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "date-fns": "^2.29.3",
    "electron-is-dev": "^2.0.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.2",
    "lucide-react": "^0.263.1",
    "pdf-poppler": "^0.2.1",
    "pdfjs-dist": "^5.4.149",
    "react": "^18.2.0",
    "react-calendar": "^4.6.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1",
    "sharp": "^0.34.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^38.1.2",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
